{
    "compilerOptions": {
        "module": "NodeNext",
        "declaration": true,
        "target": "ES2024",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": false,
        "allowJs": true,
        "moduleResolution": "nodenext",
        "lib": ["ES2024"]
    },
    "include": [
        "**/*.ts",
        "node_modules/@types/**/*.d.ts", 
        "../src/worker.ts", 
        "../src/worker.spec.ts", 
        "types.d.ts", 
        "../src/interfaces.ts"
    ]
}
